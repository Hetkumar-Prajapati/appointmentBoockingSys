<h1>Appointments Details</h1>
<form method="post">
        <fieldset>
            <label for="name" class="col-2">Name: *</label>
            <input name="name" id="name" required value="{{appointments.name}}" />
        </fieldset>
        <fieldset>
            <label for="email" class="col-2">Email: *</label>
            <input name="email" id="email" required value="{{appointments.email}}" />
        </fieldset>
        <fieldset>
            <label for="date" class="col-2">Date: *</label>
            <input name="date" id="date" required value="{{appointments.date}}" />
        </fieldset>
        <fieldset>
            <label for="reason" class="col-2">Reason: *</label>
            <input name="reason" id="reason" required value="{{appointments.reason}}" />
        </fieldset>
        
        <button class="btn btn-primary offset-2">Save</button>
</form>